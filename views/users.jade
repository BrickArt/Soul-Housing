block popup
  .superPuperHousePlace
    .notificationHouse
    .superPlaceWindow
      button.closeNotif X
      -if(guestID)
        -each gist in gists 
          -if(gist._id == guestID)
            .popupImg(style="background: url(img/upload/guest/#{gist.image}); background-size: auto 100%; background-position: center")
            .popInfo
              p= gist.name + " " + gist.lastname
              -each residence in residences
                -if (gist.residence == residence._id)
                  -each house in houses
                    -if(house._id.toString() === residence.houseID)
                      p.popHouseName #{house.name}
                      p.popHouseAddress #{house.address}
                  h1 Room: #{residence.room}
                  h2 Bed: #{residence.bed}
                  -var date = new Date(residence.startDate)
                  -var d = date.getDate()
                  -var m = date.getMonth() + 1
                  -var y = date.getFullYear()
                  -if(d < 10) d = '0'+ d
                  -if(m < 10) m = '0' + m
                  h3 In: #{m}/#{d}/#{y}
      -else
        .popupImg(style="background: url(img/upload/guest/#{gists[0].image}); background-size: auto 100%; background-position: center")
        .popInfo
          p= gists[0].name + " " + gists[0].lastname
          -each residence in residences
            -if (gists[0].residence == residence._id)
              -each house in houses
                -if(house._id.toString() === residence.houseID)
                  p.popHouseName #{house.name}
                  p.popHouseAddress #{house.address}
              h1 Room: #{residence.room}
              h2 Bed: #{residence.bed}
              -var date = new Date(residence.startDate)
              -var d = date.getDate()
              -var m = date.getMonth() + 1
              -var y = date.getFullYear()
              -if(d < 10) d = '0'+ d
              -if(m < 10) m = '0' + m
              h3 In: #{m}/#{d}/#{y}
              p Price: #{residence.price}
      
   
      .popPrice
        p Notes 
        textarea(name="", cols="50", rows="4").placerInput
        
        button.placerBtn EVICT
        button.reloc RELOCATE

  
